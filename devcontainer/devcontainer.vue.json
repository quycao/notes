{
    "name": "highhouse_web",
    "image": "vue:node16.16-alpine3.16",
    "runArgs": [
        "--name=highhouse_web"
        // "--network=highhouse_network",
	// "--privileged"
    ],
    "remoteEnv": {
        "CHOKIDAR_USEPOLLING": "true"   // fix issue hot reload not working in wsl2
    },
    "settings": {
        "terminal.integrated.defaultProfile.linux": "sh"
    },
    "extensions": [
        "octref.vetur"
    ],
    "appPort": [
        "8080:8080"
    ],
    "remoteUser": "node"
}
